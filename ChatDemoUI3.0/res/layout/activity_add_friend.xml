<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_friend"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhou.superwechat.ui.AddFriendActivity">

    <include
        android:id="@+id/layout_send_add_title"
        layout="@layout/view_layout_title" />

    <EditText
        android:id="@+id/et_msg"
        android:layout_margin="10dp"
        android:paddingLeft="5dp"
        android:background="@drawable/em_button_normal_shape"
        android:hint="@string/user_name"
        android:textColorHint="#B3B3B3"
        android:textSize="18sp"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
</LinearLayout>
